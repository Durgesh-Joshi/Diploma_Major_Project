from cv2 import cv2
#import os
import subprocess, sys
opener = "open" if sys.platform == "darwin" else "xdg-open"
import numpy as np
from keras.models import model_from_json
from keras.preprocessing import image
import time
import random

#load model
model = model_from_json(open("/home/devil/Downloads/FinalYearProject/fer.json", "r").read())
#load weights
model.load_weights('/home/devil/Downloads/FinalYearProject/fer.h5')


face_haar_cascade = cv2.CascadeClassifier('/home/devil/Downloads/FinalYearProject/Vaiba_project/haarcascade_frontalface_default.xml')


cap=cv2.VideoCapture(0)
now = time.time()
future = now + 15
while True:
    ret,test_img=cap.read()         # captures frame and returns boolean value and captured image
    test_img=cv2.flip(test_img,1,0)
    if not ret:
        continue
    gray_img= cv2.cvtColor(test_img, cv2.COLOR_BGR2GRAY)

    faces_detected = face_haar_cascade.detectMultiScale(gray_img, 1.32, 5)


    for (x,y,w,h) in faces_detected:
        cv2.rectangle(test_img,(x,y),(x+w,y+h),(255,0,0),thickness=7)
        roi_gray=gray_img[y:y+w,x:x+h]         #cropping region of interest i.e. face area from  image
        roi_gray=cv2.resize(roi_gray,(48,48))
        img_pixels = image.img_to_array(roi_gray)
        img_pixels = np.expand_dims(img_pixels, axis = 0)
        img_pixels /= 255

        predictions = model.predict(img_pixels)

        #find max indexed array
        max_index = np.argmax(predictions[0])

        emotions = ('angry', 'disgust', 'fear', 'happy', 'sad','surprise','neutral')
        predicted_emotion = emotions[max_index]

        cv2.putText(test_img, predicted_emotion, (int(x), int(y)), cv2.FONT_HERSHEY_SIMPLEX, 1, (0,0,255), 2)

        resized_img = cv2.resize(test_img, (1000, 700))
        
        cv2.imshow('Main Window ',resized_img)
        key = cv2.waitKey(30)& 0xff
        if time.time() > future:
            try:
                cv2.destroyAllWindows()
                cap.release()

                if predicted_emotion == "happy":
                    mc= ['//home//devil//Music//HAPPY1.mp3']
                    pm=random.choice(mc)
                    #os.startfile(pm)
                    subprocess.call([opener, pm])
                    break
                
                if predicted_emotion == "sad":
                    mc= ['/home//devil//Music//sad1.mp3']
                    pm=random.choice(mc)
                    #os.startfile(pm)
                    subprocess.call([opener, pm])
                    break
                    
            except:
                print('Please stay focus in Camera frame atleast 15 seconds & run again this program:)')
                break

            
        if key == 27:
            break
    


    
